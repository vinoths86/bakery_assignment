<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to 'Show', customer , class: "btn btn-default"%></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-default"%></td>
        <td>
          <%= button_to customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
           Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class: "btn btn-default" %>
